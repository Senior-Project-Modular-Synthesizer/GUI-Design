<component>
    <api>
        <prop name="text" type="string"/>
        <prop name="subject" type="subject"/>
    </api>
    <styles>
        <style name="box" transform_width="0" transform_height="0"/>
    </styles>
    <view width="150" extends="lv_checkbox" bind_checked="$subject" text="$text" style_text_font="font_title">
        <style name="box" selector="indicator|pressed" />
    </view>
</component>